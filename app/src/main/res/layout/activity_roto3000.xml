<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".roto3000"
    android:padding="0dp">

    <view
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="fr.m1alma.ihm.roto3000.zoneDessin"
        android:id="@+id/drawzone"
        android:layout_row="77"
        android:layout_column="3"
        android:layout_marginLeft="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:id="@+id/button_menu"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:src="@drawable/menu"
            android:layout_columnSpan="4"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:id="@+id/button_pen"
            android:layout_row="0"
            android:layout_column="5"
            android:src="@drawable/pencil"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:id="@+id/button_size"
            android:layout_row="0"
            android:layout_column="6"
            android:src="@drawable/size"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:id="@+id/button_color"
            android:layout_row="0"
            android:layout_column="7"
            android:background="@null"
            android:src="@drawable/color_wheel"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:id="@+id/button_erase"
            android:layout_row="0"
            android:layout_column="8"
            android:src="@drawable/eraser"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <ToggleButton
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:textOff="OFF"
            android:textOn="ON"
            android:id="@+id/toggleButton_background"
            android:layout_row="0"
            android:layout_column="10"
            android:checked="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="230dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layers_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_up"
        android:background="@null"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_frame"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:background="@null"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev_frame"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:background="@null"/>

</RelativeLayout>

