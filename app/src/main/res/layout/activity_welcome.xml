<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.m1alma.ihm.roto3000.welcome">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Project"
        android:id="@+id/open_pro_btn"
        android:layout_row="4"
        android:layout_column="1"
        android:onClick="openProject"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:id="@+id/new_pro_btn"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="newProject"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/open_pro_btn"
        android:layout_alignStart="@+id/open_pro_btn"
        android:layout_marginTop="32dp"
        android:layout_alignEnd="@+id/open_pro_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to "
        android:id="@+id/welcome_txt"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/open_pro_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Roto3000"
        android:id="@+id/roto_txt"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_below="@+id/welcome_txt"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
